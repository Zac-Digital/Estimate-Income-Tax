@model YourPay

<div class="govuk-form-group@(Model.ErrorFrequency ? " govuk-form-group--error" : "")">
    <fieldset class="govuk-fieldset" aria-describedby="F__Error">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend govuk-fieldset__legend--m">
            <h1 class="govuk-fieldset__heading">How often are you paid this amount?</h1>
        </legend>
        @if (Model.ErrorFrequency)
        {
            <p id="F__Error" data-testid="F__Error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> Select how often you are paid this amount
            </p>
        }
        <div class="govuk-radios" data-module="govuk-radios">
            @foreach (string option in Model.Options)
            {
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="F__@option" data-testid="F__@option" asp-for="Frequency" type="radio"
                           value="@option">
                    <label class="govuk-label govuk-radios__label" for="F__@option">
                        @option
                    </label>
                </div>
            }
        </div>
    </fieldset>
</div>